<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3b5998</item> <!-- On change la couleur principale -->
        <item name="colorPrimaryDark">#2b4781</item> <!-- On change la couleur de la toolbar -->
        <item name="colorAccent">#FF4081</item>

        <!-- On rend la barre translucide -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item> <!-- On change la couleur principale -->
        <item name="colorPrimaryDark">@color/darkOrange</item> <!-- On change la couleur de la toolbar -->
        <item name="colorAccent">@color/orange</item>

        <!-- On rend la barre translucide -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
