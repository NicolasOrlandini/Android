<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorPrimaryDark"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="bottom"
    android:id="@+id/nav_header">

    <ImageButton
        android:id="@+id/imageView"
        android:background="@drawable/delorean1"
        android:layout_height="wrap_content"
        android:contentDescription="@string/imageView_description"
        android:onClick="easterEgg"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/delorean1"
        android:layout_width="wrap_content" />

    <orlandini.jeu.CustomBackToTheFuture
        android:id="@+id/nom_joueur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        android:text="@string/pref_default_display_name"
        android:layout_gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:customFont="BTTF.ttf"/>


</LinearLayout>