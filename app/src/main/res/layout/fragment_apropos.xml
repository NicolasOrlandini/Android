<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="orlandini.jeu.Fragments.AProposFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="100dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cvAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingTop="16dp"
            card_view:cardBackgroundColor="@color/darkOrange"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                >

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/picture"
                    android:layout_alignParentTop="true"
                    android:textSize="20sp"
                    android:text="Version 0.71"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    />
                <TextView
                    android:id="@+id/developpedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/version"
                    android:textSize="16sp"
                    android:layout_marginBottom="15dp"
                    android:text="Application développée par Nicolas Orlandini et Valentin Leon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/github"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/developpedBy"
                    android:text="Lien GitHub"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/githubText"
                    android:layout_below="@+id/github"
                    android:text="github.com/NicolasOrlandini/AndroidProjet"/>

                <TextView
                    android:id="@+id/resourcesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/githubText"
                    android:layout_marginTop="30dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="Bibliothèque et Ressources"/>

                <ListView
                    android:id="@+id/listViewRessources"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/resourcesTitle"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>
